<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal Akademik</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center bg-success text-white p-3 rounded">
            <h1>PORTAL AKADEMIK</h1>
            <li class="nav-item">
                <button type="button" class="btn btn-light ms-2" data-bs-toggle="modal" data-bs-target="#infoModal">
                    Kelompok
                </button>
            </li>
            <form method="POST" action="/logout">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
        
        <!-- Tampilkan anggota kelompok -->
<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="infoModalLabel">Kelompok 6 - PAW Kelas D</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>TEMA :</strong> Portal Akademik</p>
                <ul>
                    <li>20220140160 - Ersa UI</li>
                    <li>20220140169 - Rifqi Test</li>
                    <li>20220140177 - Adifa UC</li>
                    <li>20220140181 - Latif ERD</li>
                    <li>20220140182 - Lutfi CD</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
        <!-- Informasi Mahasiswa -->
        <div class="row mt-4">
            <!-- Kolom Kiri: Data Mahasiswa -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <p><strong>NIM:</strong> <%= mahasiswa.nim %></p>
                        <p><strong>NAMA:</strong> <%= mahasiswa.nama %></p>
                        <p><strong>PRODI:</strong> <%= mahasiswa.prodi %></p>
                    </div>
                </div>
            </div>

            <!-- Kolom Kanan: Tabel Nilai -->
            <div class="col-md-6">
                <h3 class="text-center">Halaman Home</h3>
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>KODE MK</th>
                            <th>Nama MataKuliah</th>
                            <th>Nilai</th>
                            <th>Predikat</th>
                            <th>Keterangan</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% mahasiswa.nilai.forEach((mk) => { %>
                        <tr>
                            <td><%= mk.kode %></td>
                            <td><%= mk.nama %></td>
                            <td><%= mk.nilai %></td>
                            <td><%= mk.predikat %></td>
                            <td><%= mk.keterangan %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
